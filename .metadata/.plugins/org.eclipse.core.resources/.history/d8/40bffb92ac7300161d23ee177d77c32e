package ej222pj_assign1;

/**
 * @author Eric
 *
 * @date 5 sep 2016 : @time 19:56:08
 *
 */
public class ArraysMain {

	public static void main(String[] args) throws Exception{
		int[] testArr = {3, 1, 6, 1, 2};
        int[] subArr1 = {8, 77, 1};
        int[] subArr2 = {1, 2, 3};
        int[] difArr = {1,1,1,1,1};
        System.out.println("Testing sum method...");
        System.out.println(Arrays.sum(testArr));
        System.out.println("\nTesting toString method...");
        System.out.println(Arrays.toString(testArr));
        System.out.println("\nTesting addN method, adding 5...");
        System.out.println(Arrays.toString(Arrays.addN(testArr, 5)));
        System.out.println("\nTesting reverse method...");
        System.out.println(Arrays.toString(Arrays.reverse(testArr)));
        System.out.println("\nTesting replace method... replacing 6 with 33...");
        Arrays.replaceAll(testArr, 6, 77);
        System.out.println(Arrays.toString(testArr));
        System.out.println("\nTesting sort method...");
        System.out.println(Arrays.toString(Arrays.sort(testArr)));
        System.out.println("\nTesting has subsequence method...");
        System.out.println("Array: " + Arrays.toString(testArr));
        System.out.println("Subarray one: "+ Arrays.toString(subArr1));
        System.out.println("Result: " + Arrays.hasSubsequence(testArr, subArr1));
        System.out.println("Subarray two: "+ Arrays.toString(subArr2));
        System.out.println("Result: "+Arrays.hasSubsequence(testArr, subArr2));
        System.out.println("\nTesting absDif method... sending in {1,1,1,1,1}");
        System.out.println("Original values: " + Arrays.toString(testArr));
        System.out.println(Arrays.toString(Arrays.absDif(testArr, difArr)));
	}
}
