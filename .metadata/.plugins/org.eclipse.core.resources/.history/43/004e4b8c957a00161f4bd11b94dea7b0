package ej222pj_assign1.exercise_2;

import java.util.ArrayList;
import java.util.List;

/**
 * @author Eric
 *
 * @date 13 sep 2016 : @time 13:03:22
 *
 */
public abstract class Vehicle {
	protected int passengers;
	protected double space;
	protected int vehiclePrice;
	protected int passengersTicketPrice;
	protected String vehicleType;

    public int getAmountPassengers(){
        return this.passengers;
    }

    public int getFeeForPassengers(){
        return this.feeForPassengers;
    }

    public int getVehiclePrice(){
        return this.vehiclePrice;
    }

    public double getSpace(){
        return this.space;
    }

    public String getVehicleType(){
        return this.vehicleType;
    }
    
    protected boolean rightAmountOfPassengers(int aPassengers, int max){
        if (aPassengers <= max){
            return true;
        }
        return false;
    }
}