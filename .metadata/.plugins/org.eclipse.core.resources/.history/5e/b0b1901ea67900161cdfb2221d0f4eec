package ej222pj_assign1.exercise_2;

/**
 * @author Eric
 *
 * @date 13 sep 2016 : @time 13:03:22
 *
 */
public class Passenger {
	private double _ticketPriceWithVehicle;
	private static final double TICKET_PRICE_NO_VEHICLE = 20.0;
  

	public Passenger() {
		this(TICKET_PRICE_NO_VEHICLE);
	}

	public Passenger(double fullTicketPrice) {
		_ticketPriceWithVehicle = fullTicketPrice;
	}


	public double getPrice() {
		return _ticketPriceWithVehicle;
	}

	@Override
	public String toString() {
		return String.format("Passenger details:\n\tTicket price: %.2f", _ticketPriceWithVehicle);
	}
}